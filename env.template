# Site Configuration
NEXT_PUBLIC_SITE_URL=https://panafricanbitcoin.com

# Supabase Configuration
# Get these from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
# Or use Vercel Supabase Integration which will auto-inject these

# Public URL and Anon Key (safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service Role Key (server-side only - NEVER expose to client)
# Only needed for admin operations
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Admin Session Secret (for admin authentication)
# Generate a random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SESSION_SECRET=your_random_secret_here

# Resend Email Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
# Update this with your verified domain email (e.g., noreply@panafricanbitcoin.com)
# For testing, you can use: onboarding@resend.dev
RESEND_FROM_EMAIL=PanAfrican Bitcoin Academy <onboarding@resend.dev>
